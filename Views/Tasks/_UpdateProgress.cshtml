
@model TaskManager.Web.Models.TaskUpdateProgressViewModel


<div class="modal fade" id="modal-task">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Progress</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pb-0">
                <form asp-action="UpdateTaskProgress">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <div class="form-group">
                            <b><label class="control-label">Status</label></b>
                            @Html.DropDownListFor(x => x.Status,
                                    Model.StatusList,
                                    new
                                                    {
                                                        @class = "chosen-select form-control input-form",
                                                    })
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.TaskProgress" class="control-label"></label>
                            <input id="taskProgressInput" type="range" value="@Model.TaskProgress" max="100" class="form-control" oninput="taskProgressId.value = this.value">
                            <output id="taskProgressId">@Model.TaskProgress</output>
                            <span asp-validation-for="@Model.TaskProgress" class="text-danger"></span>
                            <input type="hidden" asp-for="@Model.TaskProgress" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Remarks" class="control-label"></label>
                        <textarea asp-for="@Model.Remarks" class="form-control" rows="3" cols="15" placeholder="Enter ..."></textarea>
                        <span asp-validation-for="@Model.Remarks" class="text-danger"></span>
                    </div>
                </form>
                <div id="progressSpinner" style="display:none;" class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
           
               
          
            <br />
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-sm-5">
                        <button type="button" id="task-submit-btnId" data-save="modal" class="btn btn-primary">Save changes</button>
                     </div>
                    <div class="col-sm-7" style="height:60px; overflow-y:auto;">

                        @foreach (var employee in Model.TaskEmployees)
                        {

                            <div class="d-flex align-items-center justify-content-end mb-2">
                                <i class="far fa-user-circle" style="font-size:24px" aria-hidden="true">
                                </i>&nbsp;@employee&nbsp;<i class="fas fa-wifi" aria-hidden="true"></i>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer text-center d-block">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
             </div>

            </div>
            <!-- /.modal-content -->
        </div>
    <!-- /.modal-dialog -->
</div>
