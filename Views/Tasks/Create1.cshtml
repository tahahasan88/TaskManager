@model TaskManager.Web.Models.TaskViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />

<div class="container-fluid">
<!-- Small boxes (Stat box) -->
<div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Task.TaskProgress" class="control-label"></label>
                    <input asp-for="@Model.Task.TaskProgress" class="form-control" />
                    <span asp-validation-for="@Model.Task.TaskProgress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Task.Title" class="control-label"></label>
                    <input asp-for="@Model.Task.Title" class="form-control" />
                    <span asp-validation-for="@Model.Task.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Task.Description" class="control-label"></label>
                    <input asp-for="@Model.Task.Description" class="form-control" />
                    <span asp-validation-for="@Model.Task.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Task.Target" class="control-label"></label>
                    <input asp-for="@Model.Task.Target" class="form-control" />
                    <span asp-validation-for="@Model.Task.Target" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b><label class="control-label">Priority</label></b>
                    @Html.DropDownListFor(x => x.PriorityId,
                           Model.PriorityList,
                           new
                                           {
                                               @class = "chosen-select form-control input-form",
                                           })
                </div>
                <div class="form-group">
                    <b><label class="control-label">Assignee</label></b>
                    @Html.DropDownListFor(x => x.AssigneeCode,
                           Model.EmployeeList,
                           new
                                           {
                                               @class = "chosen-select form-control input-form",
                                           })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

