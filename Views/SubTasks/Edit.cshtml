@model TaskManager.Web.Models.SubTaskViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SubTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.SubTask.Id" />
            <div class="form-group">
                <label asp-for="@Model.SubTask.Description" class="control-label"></label>
                <input asp-for="@Model.SubTask.Description" class="form-control" />
                <span asp-validation-for="@Model.SubTask.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label class="control-label">Assignee</label></b>
                @Html.DropDownListFor(x => x.SelectedEmployee,
                       Model.EmployeeList,
                       new
                                       {
                                           @class = "chosen-select form-control input-form",
                                       })
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.SubTask.IsDeleted" /> @Html.DisplayNameFor(model => model.SubTask.IsDeleted)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

