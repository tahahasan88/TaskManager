@model TaskManager.Web.Models.UpdateProgressViewModel

@{
    ViewData["Title"] = "UpdateProgress";
}

<h1>Edit</h1>

<h4>Task</h4>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdateProgress">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Task.Id" />
                <input type="hidden" asp-for="@Model.Task.CreatedAt" />
                <div class="form-group">
                    <b><label class="control-label">Status</label></b>
                    @Html.DropDownListFor(x => x.SelectedStatus,
                           Model.StatusList,
                           new
                                           {
                                               @class = "chosen-select form-control input-form",
                                           })
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Task." class="control-label"></label>
                    <input asp-for="@Model.Task.TaskProgress" class="form-control" />
                    <span asp-validation-for="@Model.Task.TaskProgress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary"/>
                </div>
        </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
